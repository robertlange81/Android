<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">

<ImageView android:id="@+id/icon"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginRight="3dip"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" />

<TextView android:id="@+id/stationName"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_marginTop="4dip"
    android:layout_toRightOf="@id/icon"
    android:layout_marginRight="6dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView android:id="@+id/openingTimes"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:layout_below="@id/stationName"
    android:layout_alignLeft="@id/stationName"
    android:layout_width="wrap_content"
    android:layout_marginRight="6dip"
    android:layout_height="wrap_content"
    android:textColor="#ff2d4fff" />

    <TextView android:id="@+id/distance"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:layout_toRightOf="@id/openingTimes"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="8dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffff3034" />

    <TextView android:id="@+id/price"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:layout_toRightOf="@id/distance"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="8dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:textColor="#ff57ff26" />
</RelativeLayout>