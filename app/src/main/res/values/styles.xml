<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- Input layout styles -->

    <style name="wage_period_value">
        <item name="android:text">als Jahresgehalt</item>
        <item name="android:layout_marginLeft">@dimen/textview_layout_marginLeft_wage_period</item>
        <item name="android:textColor">@color/control</item>
        <item name="android:textSize">@dimen/textview_font_size</item>
    </style>

    <style name="taxclass_slider">
        <item name="android:max">5</item>
        <item name="android:progress">0</item>
        <item name="android:layout_marginLeft">80px</item>
        <item name="android:layout_marginTop">-8px</item>
    </style>

    <style name="taxclass_value">
        <item name="android:text">1</item>
        <item name="android:layout_marginLeft">@dimen/textview_layout_marginLeft</item>
        <item name="android:textColor">@color/text_shadow</item>
        <item name="android:textSize">@dimen/textview_font_size</item>
    </style>

    <style name="children_slider">
        <item name="android:max">10</item>
        <item name="android:progress">0</item>
        <item name="android:layout_marginLeft">80px</item>
        <item name="android:layout_marginTop">-8px</item>
    </style>

    <style name="children_value">
        <item name="android:text">0.0</item>
        <item name="android:layout_marginLeft">@dimen/textview_layout_marginLeft</item>
        <item name="android:textColor">@color/text_shadow</item>
        <item name="android:textSize">@dimen/textview_font_size</item>
    </style>

    <style name="calculate">
        <item name="android:textColor">@color/text_shadow_white</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textview_button_font_size</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

</resources>
