<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ResultActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="right">

    <LinearLayout
        android:id="@+id/resultPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:stretchColumns="0,1"
        android:orientation="horizontal">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:background="#00cb00"
            android:baselineAligned="false"
            android:layout_weight="1"
            android:layout_gravity="right">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Lohnsteuer-Brutto"
                android:id="@+id/LohnsteuerPflBruttoT"
                android:padding="10dp"
                android:layout_gravity="center_horizontal|left" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/LohnsteuerPflBrutto"
                android:gravity="right"
                android:padding="10dp"
                android:layout_column="1"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Lohnsteuer"
                android:id="@+id/LohnsteuerT"
                android:padding="10dip"
                android:layout_gravity="center_horizontal|left" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:padding="10dip"
                android:id="@+id/Lohnsteuer"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SolidaritÃ¤tszuschlag"
                android:padding="10dip"
                android:id="@+id/SoliT"
                android:layout_gravity="center_horizontal|left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:padding="10dip"
                android:id="@+id/Soli"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Kirchensteuer"
                android:padding="10dip"
                android:id="@+id/KirchensteuerT"
                android:layout_gravity="center_horizontal|left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:padding="10dip"
                android:id="@+id/Kirchensteuer"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Krankenversicherung"
                android:padding="10dip"
                android:id="@+id/Krankenversicherung_ANT"
                android:layout_gravity="center_horizontal|left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:padding="10dip"
                android:id="@+id/Krankenversicherung_AN"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rentenversicherung"
                android:id="@+id/Rentenversicherung_ANT"
                android:padding="10dip"
                android:layout_gravity="center_horizontal|left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:padding="10dip"
                android:id="@+id/Rentenversicherung_AN"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Arbeitslosenverserung"
                android:padding="10dip"
                android:id="@+id/Arbeitslosenversicherung_ANT"
                android:layout_gravity="center_horizontal|left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:padding="10dip"
                android:id="@+id/Arbeitslosenversicherung_AN"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pflegeversicherung"
                android:padding="10dip"
                android:id="@+id/Pflegeversicherung_ANT"
                android:layout_gravity="center_horizontal|left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:padding="10dip"
                android:id="@+id/Pflegeversicherung_AN"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:paddingTop="10px"
                android:paddingBottom="5px"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:src="@android:drawable/divider_horizontal_bright" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ed1c5f">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Netto"
                android:id="@+id/nettoT"
                android:padding="10dp"
                android:layout_gravity="left|center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/netto"
                android:padding="10dp"
                android:layout_gravity="right" />
        </TableRow>


    </TableLayout >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/linkToSage"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_marginTop="15dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlaHeaderProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


</RelativeLayout>

